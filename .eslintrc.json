{
  "parserOptions": {
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },

  "settings": {
    "react": {
      "version": "detect"
    }
  },

  "plugins": ["react"],

  "rules": {
    "react/jsx-no-bind": [
      "error",
      {
        "allowArrowFunctions": true,
        "allowBind": false,
        "ignoreRefs": true
      }
    ],
    "react/no-did-update-set-state": "warn",
    "react/no-unknown-property": "warn",
    "react/no-unused-prop-types": "warn",
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "warn"
  }
}
